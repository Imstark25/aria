<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="8dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:animateLayoutChanges="true">

    <!-- Screenshot Button -->
    <FrameLayout
        android:id="@+id/btn_screenshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_floating_button"
        android:padding="10dp"
        android:visibility="gone"
        android:elevation="6dp"
        android:layout_marginBottom="12dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_screenshot"
            android:contentDescription="Screenshot"
            android:tint="#FFFFFF" />
    </FrameLayout>

    <!-- Volume Button (Open Overlay) -->
    <FrameLayout
        android:id="@+id/btn_open_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_floating_button"
        android:padding="10dp"
        android:visibility="gone"
        android:elevation="6dp"
        android:layout_marginBottom="12dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_volume_up"
            android:contentDescription="Open Overlay"
            android:tint="#FFFFFF" />
    </FrameLayout>

    <!-- Main Toggle Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bubble_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/icon_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/floating_logo"
            android:scaleType="centerCrop"
            android:contentDescription="Main Control" />
            
    </androidx.cardview.widget.CardView>
</LinearLayout>
