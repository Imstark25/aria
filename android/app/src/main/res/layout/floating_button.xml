<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="8dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:animateLayoutChanges="true">

    <!-- Screenshot Button -->
    <FrameLayout
        android:id="@+id/btn_screenshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_floating_button"
        android:padding="10dp"
        android:visibility="gone"
        android:elevation="6dp"
        android:layout_marginBottom="12dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_screenshot"
            android:contentDescription="Screenshot"
            android:tint="#FFFFFF" />
    </FrameLayout>

    <!-- Volume Button (Open Overlay) -->
    <FrameLayout
        android:id="@+id/btn_open_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_floating_button"
        android:padding="10dp"
        android:visibility="gone"
        android:elevation="6dp"
        android:layout_marginBottom="12dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_volume_up"
            android:contentDescription="Open Overlay"
            android:tint="#FFFFFF" />
    </FrameLayout>

    <!-- Main Toggle Button -->
    <FrameLayout
        android:id="@+id/bubble_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_floating_button"
        android:padding="12dp"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/icon_main"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:rotation="45"
            android:contentDescription="Main Control"
            android:tint="#FFFFFF" />
            
    </FrameLayout>
</LinearLayout>
